<%- include("./partials/header"); %>
<main>
  <!-- List  -->
  <section id="toDo">
    <div class="wrapper">
      <div class="container box" id="listHeading">
        <h1 class="listTitle">My List</h1>
      </div>
      <div class="container box">
        <ul class="items">
          <% listItem.map((foundItems) => { %>
            <!-- delete form  -->
            <form action="/delete" method="POST">
            <li class="item">
                <input type="checkbox" name="checkbox" value="<%=foundItems._id%>" onchange="this.form.submit()">
              <%=foundItems.name%>
            </li>
          </form>
          <% }) %>
          <!-- post form  -->
          <form action="/list" method="post">
            <li class="item">
                <input type="text" placeholder="New Item" autocomplete="off" name="newItem"/>
                <button class="btn-add" type="submit" name="addButton">+</button>  
              </li>
        </form>
        </ul>
      </div>
    </div>
  </section>
</main>
<%- include("./partials/footer"); %>
